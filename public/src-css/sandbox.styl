cf()
	zoom 1
	
	&:after,
	&:before
		content ''
		display table
	&:after
		clear both
		

@import 'sidebar.styl'

section
	margin-top 36px


.wrapper
	max-width 1000px
	margin auto
	padding 40px
	box-sizing border-box
	background-color #c6c6c6
	cf()

.player_card_wrap
	perspective 700
	cf()

.player_card
	width 150px
	height 150px
	margin auto	
	transition all .4s ease
	transform-style preserve-3d
	position relative
	float left
	margin-right 20px
	margin-bottom 10px

	&:hover
		transform rotateY(180deg)

	&:first-child
		transform rotateY(180deg)

.player_card_front,
.player_card_back
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	background-size cover
	background-position-x center
	background-repeat no-repeat
	background-color #fff
	border 2px #9f0000 solid
	box-sizing border-box
	backface-visibility hidden
	overflow hidden

.player_card_back
	transform rotateY(180deg)
	background-color #99102d
	color #fff
	padding 10px

.player_card_stats
	width 100%
	color #fff
	
	.value
		text-align right